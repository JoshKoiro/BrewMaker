{
    "source": {
        "include": [
            "js/**/*.js"
        ],
        "includePattern": [
            ".js$"
        ],
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "opts": {
        "template": "node_modules/clean-jsdoc-theme",
        "theme_opts": {
            "default_theme": "dark"
        },
        "encoding": "utf8",
        "destination": "docs/",
        "recurse": true,
        "verbose": true,
        "readme": "./README.md",
        "tutorials": "./docs/tutorials/"
    },
    "markdown": {
        "hardwrap": false,
        "idInHeadings": true
    }
}