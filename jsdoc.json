{
    "source": {
        "include": ["./js"],
        "excludePattern": "(node_modules/|docs)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "opts": {
        "template": "node_modules/clean-jsdoc-theme",
        "theme_opts": {
            "default_theme": "dark",
            "includeFilesListInHomepage": true
        },
        "encoding": "utf8",
        "destination": "docs/",
        "recurse": true,
        "verbose": true,
        "readme": "./README.md"
    },
    "markdown": {
        "hardwrap": false,
        "idInHeadings": true
    }
}